{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "lib": ["es2020", "dom"],
    "types": ["@types/node"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": false
  },
  "include": ["*.ts"]
} 